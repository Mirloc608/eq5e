const MODULE_ID = "eq5e-class-monk";

/* ------------------------------ PACK LOADER ------------------------------ */

async function ensureWorldPack({ pack, label, type="Item" }) {
  const exists = game.packs?.get(pack);
  if (exists) return exists;
  const meta = {
    name: pack.split(".")[1],
    label,
    type,
    system: "eq5e",
    package: "world",
    path: `packs/${pack.split(".")[1]}.db`,
  };
  return await CompendiumCollection.createCompendium(meta);
}

async function fetchJSON(rel) {
  const url = `systems/eq5e/bundles/${MODULE_ID}/${rel}`;
  const res = await fetch(url);
  if (!res.ok) throw new Error(`Fetch failed ${res.status} for ${url}`);
  return res.json();
}

function stableHash(obj) {
  const s = JSON.stringify(obj);
  let h = 2166136261;
  for (let i=0;i<s.length;i++) { h ^= s.charCodeAt(i); h = Math.imul(h,16777619); }
  return (h>>>0).toString(16);
}

async function upsertJSONToPack({ rel, pack, label, key }) {
  const docs = await fetchJSON(rel);
  const p = await ensureWorldPack({ pack, label, type: "Item" });
  await p.getIndex();
  const existingDocs = await p.getDocuments();
  const byKey = new Map();
  for (const d of existingDocs) {
    try { byKey.set(String(key(d)), d); } catch {}
  }
  const toCreate = [];
  const toUpdate = [];
  for (const raw of docs) {
    const d = foundry.utils.duplicate(raw);
    d.flags = d.flags ?? {};
    d.flags.eq5e = d.flags.eq5e ?? {};
    d.flags.eq5e.derivedHash = stableHash(d);
    const k = String(key(d));
    const ex = byKey.get(k);
    if (!ex) toCreate.push(d);
    else if (ex.flags?.eq5e?.derivedHash !== d.flags.eq5e.derivedHash) {
      d._id = ex.id;
      toUpdate.push(d);
    }
  }
  if (toCreate.length) await p.documentClass.createDocuments(toCreate, { pack: p.collection });
  if (toUpdate.length) await p.documentClass.updateDocuments(toUpdate, { pack: p.collection });
  return { created: toCreate.length, updated: toUpdate.length };
}

Hooks.once("ready", async () => {
  if (!game.user.isGM) return;
  try {
    await upsertJSONToPack({ rel:"data/aas.json", pack:"world.eq5e-monk-aas", label:"EQ5e Monk AAs", key:d=>d?.flags?.eq5e?.aa?.aaId ?? d?.name });
    await upsertJSONToPack({ rel:"data/abilities.json", pack:"world.eq5e-monk-abilities", label:"EQ5e Monk Abilities", key:d=>d?.flags?.eq5e?.ability?.abilityId ?? d?.name });
    console.log(`[EQ5E] ${MODULE_ID} loaded Monk packs.`);
  } catch (e) { console.error(`[EQ5E] ${MODULE_ID} pack load failed`, e); }
});

/* ----------------------------- MONK WIDGET ----------------------------- */

function _isMonkActor(actor) {
  const cid = String(actor?.flags?.eq5e?.class?.id ?? actor?.flags?.eq5e?.classId ?? "").toLowerCase();
  if (cid === "monk") return true;
  return actor.items?.some(i => String(i?.flags?.eq5e?.aa?.aaId ?? "").startsWith("mnk.")) ?? false;
}

function _getAARankById(actor, aaId) {
  if (!actor || !aaId) return 0;
  for (const it of actor.items ?? []) {
    const aa = it?.flags?.eq5e?.aa;
    if (!aa) continue;
    if (String(aa.aaId ?? "") !== String(aaId)) continue;
    const r = Number(aa.rank ?? aa.currentRank ?? aa.purchasedRank ?? aa.value ?? 0);
    if (Number.isFinite(r) && r > 0) return r;
  }
  return 0;
}

async function _setupMonk(actor) {
  const packs = [
    "world.eq5e-monk-aas",
    "world.eq5e-monk-abilities",
    // if the monk discipline pack is installed, we can optionally pull it too
    "world.eq5e-monk-disciplines",
  ];
  let added = 0;

  for (const pid of packs) {
    const pack = game.packs?.get(pid);
    if (!pack) continue;
    const docs = await pack.getDocuments();
    const objs = docs.map(d => d.toObject());
    const ownedKeys = new Set(actor.items.map(i =>
      i.flags?.eq5e?.discipline?.disciplineId ??
      i.flags?.eq5e?.aa?.aaId ??
      i.flags?.eq5e?.ability?.abilityId ??
      i.name
    ));
    const filtered = objs.filter(o => {
      const k = o.flags?.eq5e?.discipline?.disciplineId ??
                o.flags?.eq5e?.aa?.aaId ??
                o.flags?.eq5e?.ability?.abilityId ??
                o.name;
      return !ownedKeys.has(k);
    });
    if (filtered.length) {
      await actor.createEmbeddedDocuments("Item", filtered);
      added += filtered.length;
    }
  }

  ui.notifications?.info(`Monk setup complete: added ${added} items to ${actor.name}.`);
}

function _renderMonkWidget(app, html) {
  const actor = app?.actor;
  if (!actor) return;
  if (!actor.isOwner) return;
  if (!_isMonkActor(actor)) return;
  if (html.find(".eq5e-monk-widget").length) return;

  const wu = _getAARankById(actor, "mnk.aa.master-wu");
  const mendH = _getAARankById(actor, "mnk.aa.hastened-mend");
  const mendI = _getAARankById(actor, "mnk.aa.improved-mend");
  const fdH = _getAARankById(actor, "mnk.aa.hastened-fd");
  const agi = _getAARankById(actor, "mnk.aa.combat-agility");
  const stab = _getAARankById(actor, "mnk.aa.combat-stability");

  const widget = $(`
    <section class="eq5e-monk-widget" style="border:1px solid rgba(255,255,255,.12); border-radius:8px; padding:8px; margin:6px 0;">
      <header style="display:flex; justify-content:space-between; align-items:center; margin-bottom:6px;">
        <h3 style="margin:0; font-size:14px;">Monk</h3>
        <div style="display:flex; gap:6px;">
          <button type="button" class="eq5e-monk-setup" title="Import Monk AAs/abilities (and disciplines if installed)"><i class="fa-solid fa-wand-magic-sparkles"></i> Setup</button>
          <button type="button" class="eq5e-monk-refresh" title="Refresh"><i class="fa-solid fa-rotate"></i></button>
        </div>
      </header>

      <div style="display:grid; grid-template-columns:1fr 1fr; gap:8px;">
        <div style="border:1px solid rgba(255,255,255,.08); border-radius:8px; padding:8px;">
          <div style="font-size:12px; opacity:.8;">AAs</div>
          <div style="font-size:12px;">Master Wu: <b>r${wu||0}</b></div>
          <div style="font-size:12px;">Hastened Mend: <b>r${mendH||0}</b> · Improved Mend: <b>r${mendI||0}</b></div>
          <div style="font-size:12px;">Hastened FD: <b>r${fdH||0}</b></div>
          <div style="font-size:12px;">Agility: <b>r${agi||0}</b> · Stability: <b>r${stab||0}</b></div>
        </div>

        <div style="border:1px solid rgba(255,255,255,.08); border-radius:8px; padding:8px;">
          <div style="font-size:12px; opacity:.8;">Notes</div>
          <div style="font-size:12px; opacity:.85;">Disciplines are managed via the Discipline HUD pill.</div>
          <div style="font-size:12px; opacity:.85;">Feign Death mechanics can be deepened later (threat drop + target loss).</div>
        </div>
      </div>
    </section>
  `);

  const form = html.find("form");
  if (form.length) form.prepend(widget);
  else html.prepend(widget);

  widget.find(".eq5e-monk-refresh").on("click", async ()=>{ try { await app.render(false);} catch{} });
  widget.find(".eq5e-monk-setup").on("click", async ()=>{ await _setupMonk(actor); try { await app.render(false);} catch{} });
}

Hooks.on("renderActorSheet", (app, html) => {
  try { _renderMonkWidget(app, html); } catch (e) { console.error("[EQ5E] Monk widget error", e); }
});
